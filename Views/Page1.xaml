<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SailMonitor.Page1"
             HorizontalOptions="FillAndExpand"
             VerticalOptions="FillAndExpand">

    <!-- Master container -->
    <Grid x:Name="MainGrid"
          RowDefinitions="Auto,*"
          ColumnDefinitions="*"
          HorizontalOptions="FillAndExpand"
          VerticalOptions="FillAndExpand">

        <!-- Info panel (the numbers) -->
        <VerticalStackLayout x:Name="InfoPanel"
                             Grid.Row="0"
                             Grid.Column="0"
                             Padding="4"
                             Spacing="8"
                             HorizontalOptions="FillAndExpand"
                             VerticalOptions="Start">

            <!-- Row 0 -->
            <HorizontalStackLayout HorizontalOptions="FillAndExpand" Spacing="8">
                <VerticalStackLayout Padding="4" HorizontalOptions="FillAndExpand">
                    <Label Text="Heading" HorizontalTextAlignment="Start" />
                    <Label x:Name="HeadingLabel" FontSize="18" HorizontalTextAlignment="End" />
                </VerticalStackLayout>

                <VerticalStackLayout Padding="4" HorizontalOptions="FillAndExpand">
                    <Label Text="Speed Water" HorizontalTextAlignment="Start" />
                    <Label x:Name="SpeedWaterLabel" FontSize="18" HorizontalTextAlignment="End" />
                </VerticalStackLayout>

                <VerticalStackLayout Padding="4" HorizontalOptions="FillAndExpand">
                    <Label Text="Speed Ground" HorizontalTextAlignment="Start" />
                    <Label x:Name="SpeedGroundLabel" FontSize="18" HorizontalTextAlignment="End" />
                </VerticalStackLayout>

                <VerticalStackLayout Padding="4" HorizontalOptions="FillAndExpand">
                    <Label Text="Depth" HorizontalTextAlignment="Start" />
                    <Label x:Name="DepthLabel" FontSize="18" HorizontalTextAlignment="End" />
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <!-- Row 1 -->
            <HorizontalStackLayout HorizontalOptions="FillAndExpand" Spacing="8">
                <VerticalStackLayout Padding="4" HorizontalOptions="FillAndExpand">
                    <Label Text="App" HorizontalTextAlignment="Start" />
                    <Label x:Name="AWSLabel" FontSize="18" HorizontalTextAlignment="End" />
                    <Label x:Name="AWDLabel" FontSize="18" HorizontalTextAlignment="End" />
                </VerticalStackLayout>

                <VerticalStackLayout Padding="4" HorizontalOptions="FillAndExpand">
                    <Label Text="TWS" HorizontalTextAlignment="Start" />
                    <Label x:Name="TWSLabel" FontSize="18" HorizontalTextAlignment="End" />
                    <Label x:Name="TWDLabel" FontSize="18" HorizontalTextAlignment="End" />
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <!-- Graphics area -->
        <GraphicsView x:Name="GraphicsOverlay"
                      Grid.Row="1"
                      Grid.Column="0"
                      BackgroundColor="Black"
                      HorizontalOptions="Center"
                      VerticalOptions="Center"
                      HeightRequest="500"
                      />

    </Grid>
</ContentView>
